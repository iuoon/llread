<!--主盒子-->
<view class="title">
  <view class="logov">
    <image  src="../../images/logobg.png"></image>
    <text class="logo-text">纸珍贵</text>
  </view>
  <view><text class="catalog">二手纸书借阅目录</text></view>
</view>
<view class="container">
  
  <!--左侧栏-->
  <view class="nav_left">
    <block wx:for="{{cateItems}}" wx:key="id">
      <!--当前项的id等于item项的id，那个就是当前状态-->
      <!--用data-index记录这个数据在数组的下标位置，使用data-id设置每个item的id值，供打开2级页面使用-->
      
      <view class="nav_left_items {{curNav == item.cate_id ? 'active' : ''}}" bindtap="switchRightTab" data-index="{{index}}" data-id="{{item.cate_id}}"><image class="{{curNav == item.cate_id ? 'active' : ''}}" data-id="{{item.cate_id}}" bindtap="switchRightTab" data-index="{{index}}"  style="width:25px;height:92px"  src="{{item.cate_name}}"></image></view>
      
    </block>
  </view>
  <!--右侧栏-->
  <view class="nav_right">
    <!--如果有数据，才遍历项-->
    <view wx:if="{{cateItems[curIndex].ishaveChild}}">
      <block wx:for="{{cateItems[curIndex].children}}" wx:key="id">
        <view class="nav_right_items">
        <!--界面跳转 -->
          <navigator url="../../detail/detail}}">
            <view class="content"><text>{{item.name}}</text></view>
            <!-- <image src="{{item.image}}"></image> -->
            <!--<text>{{item.name}}</text> -->
          </navigator>
        </view>
      </block>
    </view>
    <!--如果无数据，则显示数据-->
    <view class="nodata_text" wx:else>该分类暂无数据</view>    
  </view>

  <!--  <view class="qrcode">
       <view class="qrcode1"><image src="../../images/qrcode.png"></image></view>
       <view class="qrcode2"><image src="../../images/qrcode2.png"></image></view>
    </view>
    -->
</view>
